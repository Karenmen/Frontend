<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7F0"
    tools:context=".HomeActivity">

    <!-- ===================== -->
    <!--   HEADER TIPO HERO    -->
    <!-- ===================== -->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerBanner"
        android:layout_width="0dp"
        android:layout_height="230dp"
        android:layout_marginBottom="14dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fondos"
                android:scaleType="centerCrop" />

            <!-- Overlay más elegante -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="22dp"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/txtTituloHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POZOLERÍA LA CARPITA"
                    android:textColor="#FFFFFF"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtSubHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sabor tradicional"
                    android:textColor="#EDEDED"
                    android:textSize="15sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ===================== -->
    <!--  RECOMENDACIÓN DÍA   -->
    <!-- ===================== -->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layoutDestacados"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/headerBanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐ Recomendación del día"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#2A2A2A"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Pozole verde especial\n• Tostadas recién hechas\n• Agua fresca del día"
                android:textSize="15sp"
                android:textColor="#555555"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ===================== -->
    <!--  CATEGORÍAS          -->
    <!-- ===================== -->

    <TextView
        android:id="@+id/txtCategoriasDestacadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categorías destacadas"
        android:textStyle="bold"
        android:textSize="19sp"
        android:textColor="#222222"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/layoutDestacados"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtVerTodas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver todas"
        android:textSize="14sp"
        android:textColor="#E27914"
        android:padding="6dp"
        app:layout_constraintTop_toTopOf="@id/txtCategoriasDestacadas"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCategoriasHome"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtCategoriasDestacadas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnComoLlegar" />

    <!-- ===================== -->
    <!--  BOTÓN CÓMO LLEGAR   -->
    <!-- ===================== -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnComoLlegar"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:text="¿Cómo llegar?"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:layout_margin="16dp"
        app:cornerRadius="18dp"
        android:backgroundTint="#E27914"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ===================== -->
    <!--     BOTTOM NAV        -->
    <!-- ===================== -->

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="10dp"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:labelVisibilityMode="labeled"
        app:itemHorizontalTranslationEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
