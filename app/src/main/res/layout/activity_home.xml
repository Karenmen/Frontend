<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7F0"
    tools:context=".HomeActivity">

    <!-- ===================== -->
    <!--        HEADER         -->
    <!-- ===================== -->

    <FrameLayout
        android:id="@+id/headerBanner"
        android:layout_width="0dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/fondoinicio"
            android:scaleType="centerCrop"/>

        <!-- Overlay -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#70000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:text="POZOLERÃA LA CARPITA"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Sabor tradicional"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>

    </FrameLayout>

    <!-- ===================== -->
    <!--   RECOMENDACIÃ“N       -->
    <!-- ===================== -->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRecomendacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/headerBanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:text="ðŸ² RecomendaciÃ³n del dÃ­a"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Pozole verde especial\nTostadas reciÃ©n hechas\nAgua fresca del dÃ­a"
                android:textSize="15sp"
                android:textColor="#555555"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ===================== -->
    <!--     CATEGORÃAS        -->
    <!-- ===================== -->

    <TextView
        android:id="@+id/txtCategorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CategorÃ­as destacadas"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/cardRecomendacion"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtVerTodas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver todas"
        android:textSize="14sp"
        android:textColor="#E27914"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/txtCategorias"
        app:layout_constraintBottom_toBottomOf="@id/txtCategorias"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ===================== -->
    <!--   RECYCLER VIEW       -->
    <!-- ===================== -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCategoriasHome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtCategorias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnComoLlegar"/>

    <!-- ===================== -->
    <!--   BOTÃ“N UBICACIÃ“N     -->
    <!-- ===================== -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnComoLlegar"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:text="CÃ³mo llegar"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#E27914"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        app:cornerRadius="28dp"
        app:icon="@drawable/ic_location"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"/>

    <!-- ===================== -->
    <!--   BOTTOM NAVIGATION   -->
    <!-- ===================== -->

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
